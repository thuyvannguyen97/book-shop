extends ../layouts/common
block content
  .container
    h3.my-3 Sign Up
    if errors
      each error in errors
        .alert.alert-danger= error
    form(method="post", action="/auth/register")
      div.form-group
        label(for="name") Name
        input.form-control(name="name", id="name", type="text", placeholder="Nguyen Van A")
      div.form-group 
        label(for="phone") Phone
        input.form-control(name="phone", id="phone", type="text", placeholder="0987654321")
      div.form-group 
        label(for="email") Email
        input.form-control(name="email", id="email", type="email", placeholder="name@example.com")
      div.form-group 
        label(for="password") Password
        input.form-control(name="password", id="password", type="password")
      button.btn.btn-primary.mt-3 Sign Up
